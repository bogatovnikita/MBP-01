<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_popup"
    android:paddingHorizontal="8dp"
    android:paddingVertical="4dp">

    <TextView
        android:id="@+id/from_new_to_old"
        android:layout_width="match_parent"
        android:text="@string/from_new_to_old"
        style="@style/PopupText"/>
    <TextView
        android:id="@+id/from_old_to_new"
        android:layout_width="match_parent"
        android:text="@string/from_old_to_new"
        style="@style/PopupText"/>
    <TextView
        android:id="@+id/from_big_to_small"
        android:layout_width="match_parent"
        android:text="@string/from_big_to_small"
        style="@style/PopupText"/>
    <TextView
        android:id="@+id/from_small_to_big"
        android:layout_width="match_parent"
        android:text="@string/from_small_to_big"
        style="@style/PopupText"/>

</LinearLayout>