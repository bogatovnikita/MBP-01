<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_permission"
    android:paddingBottom="24dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/we_need_permission"
        android:textAppearance="@style/Text.Header_5"
        android:textColor="@color/green"
        android:gravity="center"
        android:layout_marginVertical="24dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/we_need_permission_description"
        android:textAppearance="@style/Text.Body_1.2"
        android:layout_marginHorizontal="32dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/allow_access_usage_history"
            android:textAppearance="@style/Text.Body_2"
            android:textColor="@color/white"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingEnd="60dp"
            android:background="@drawable/bg_usage_stats_permission_message"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_hand_and_switch"
            android:layout_gravity="center|end"
            android:layout_margin="16dp"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/close"
            android:text="@string/close"
            style="@style/Button.Small.stroke_active_green"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/allow"
            android:text="@string/allow_not_underscored"
            style="@style/Button.Small.fill_active_green"/>

    </LinearLayout>






</LinearLayout>