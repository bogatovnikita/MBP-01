<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_fun_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_18sdp"
        android:fontFamily="@font/golos_text_demibold"
        android:text="Модель"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_fun_body"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_fun_body" />

    <TextView
        android:id="@+id/tv_fun_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_24sdp"
        android:fontFamily="@font/golos_text_regular"
        android:text="samsung SM-G950F"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/gray_dark"
        app:layout_constraintEnd_toEndOf="@id/tv_fun_body"
        app:layout_constraintStart_toStartOf="@+id/tv_fun_name"
        app:layout_constraintTop_toBottomOf="@id/tv_fun_body" />

</androidx.constraintlayout.widget.ConstraintLayout>