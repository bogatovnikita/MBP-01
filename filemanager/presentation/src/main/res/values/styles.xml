<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ModeRadio">
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:background">@drawable/bg_mode</item>
        <item name="android:textColor">@color/selector_mode_text_color</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textAppearance">@style/Text.Subtitle_1.2</item>
    </style>

    <style name="AskDeleteButton" >
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/Text.Header_5</item>
    </style>

    <style name="AskDeleteButton.Cancel">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:background">@drawable/bg_ask_delete_cancel</item>
    </style>

    <style name="AskDeleteButton.Ok">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_ask_delete_ok</item>
    </style>
    
    <style name="Popup" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:popupBackground">@drawable/bg_popup</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textAppearance">@style/Text.Subtitle_1</item>
        <item name="android:paddingTop">16dp</item>
    </style>

    <style name="PopupTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:popupMenuStyle">@style/Popup</item>
        <item name="android:textAppearanceLargePopupMenu">@style/Text.Subtitle_1</item>
        <item name="android:listPreferredItemHeightSmall">32dp</item>
    </style>

    <style name="PopupText">
        <item name="android:textAppearance">@style/Text.Subtitle_1</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center|start</item>
    </style>

</resources>