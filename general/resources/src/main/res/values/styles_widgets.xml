<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MiddleButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/Text.Header_5</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

    <style name="MiddleButton.Black">
        <item name="android:background">@drawable/bg_done_dialog_ok_button</item>
    </style>

    <style name="MiddleButton.Green">
        <item name="android:background">@drawable/bg_done_dialog_cancel_button</item>
    </style>

    <style name="CheckBox">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@drawable/bg_checkbox</item>
        <item name="android:button">@null</item>
    </style>

    <style name="MainButton">
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/bg_main_button_enabled</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/Text.Body_2</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BackButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="srcCompat">@drawable/ic_back</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>
</resources>